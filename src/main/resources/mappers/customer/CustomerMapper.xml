<mapper namespace="com.limdaram.ticketing.mapper.customer.CustomerMapper">
<!--    <select id="select" resultType="com.limdaram.ticketing.domain.customer.CustomerDto">-->
<!--        SELECT *-->
<!--        FROM Customer-->
