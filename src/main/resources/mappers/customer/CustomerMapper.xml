<!--    </select>-->

    <insert id="insert" useGeneratedKeys="true" keyProperty="customerId">
        INSERT INTO Customer (customerId, customerPassword, customerEmail, customerName, customerAddress, customerPhoneNumber, customerBirth)
        VALUES (#{customerId}, #{customerPassword}, #{customerEmail}, #{customerName}, #{customerAddress}, #{customerPhoneNumber}, #{customerBirth})

    </insert>

    <!--    <select id="getByCustomerUniqueNumber" resultType="com.limdaram.ticketing.domain.customer.CustomerDto">-->
<!--        SELECT *-->
<!--        FROM Customer-->
<!--        WHERE customerUniqueNumber = #{customerUniqueNumber}-->
<!--    </select>-->

    <delete id="delete">
        DELETE FROM Customer
        WHERE customerId = #{customerId}
    </delete>

    <select id="getByCustomerId" resultType="com.limdaram.ticketing.domain.customer.CustomerDto" >
        SELECT *
        FROM Customer
        WHERE customerId = #{customerId}
    </select>

    <select id="getByCustomerEmail" resultType="com.limdaram.ticketing.domain.customer.CustomerDto">
        SELECT *
        FROM Customer
        WHERE customerEmail = #{customerEmail}
    </select>

    <update id="passwordModify">
        UPDATE Customer
        SET customerPassword = #{customerPassword}
        WHERE customerId = #{customerId}
    </update>

    <update id="phoneNumberModify">
        UPDATE Customer
        SET customerPhoneNumber = #{customerPhoneNumber}
        WHERE customerId = #{customerId}
    </update>

    <update id="addressModify">
        UPDATE Customer
        SET customerAddress = #{customerAddress}
        WHERE customerId = #{customerId}
    </update>
</mapper>